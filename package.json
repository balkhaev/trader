{
  "name": "trader",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "better-auth": "^1.4.9"
    }
  },
  "type": "module",
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @trader/db db:push",
    "db:studio": "turbo -F @trader/db db:studio",
    "db:generate": "turbo -F @trader/db db:generate",
    "db:migrate": "turbo -F @trader/db db:migrate",
    "db:start": "turbo -F @trader/db db:start",
    "db:watch": "turbo -F @trader/db db:watch",
    "db:stop": "turbo -F @trader/db db:stop",
    "db:down": "turbo -F @trader/db db:down",
    "install:py": "turbo install:py",
    "telegram:auth": "turbo -F server telegram:auth"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@trader/env": "workspace:*"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "@biomejs/biome": "2.3.10",
    "ultracite": "6.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "catalog:",
    "@types/bun": "catalog:",
    "@trader/config": "workspace:*"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.3"
}
